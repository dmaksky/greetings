pipeline {
  agent any
  environment {
    YC_FOLDER_ID = credentials('yc_folder_id') 
    YC_ACCOUNT_KEY_FILE = credentials('yc_account_key_file')
  }
  tools { go '1.23' }
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Unit tests') {
      steps {
        sh 'go test'
      }
    }
    stage('Build application') {
      steps {
        sh 'go build'
      }
    }
    stage('Build image') {
      steps {
        sh 'packer init pipeline/packer/greetings.pkr.hcl'
        sh 'packer build pipeline/packer/greetings.pkr.hcl > packer.txt'
        sh 'grep ID: packer.txt | grep -E -o \'[0-9]{8}\' > do_image.txt'
      }
    }
  }
}
